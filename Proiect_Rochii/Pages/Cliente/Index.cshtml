@model Proiect_Rochii.Pages.Cliente.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Cliente</h1>

<!-- <p> <a asp-page="Create">Create New</a></p> -->
<table class="table">
    <thead>
        <tr>
            <th>
             <!--  @Html.DisplayNameFor(model => model.Clienta[0].NumeClienta)-->
             Nume
            </th>
            <th>
               <!-- @Html.DisplayNameFor(model => model.Clienta[0].PrenumeClienta) -->
               Prenume
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clienta[0].Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clienta[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clienta[0].Telefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clienta) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeClienta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenumeClienta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editează</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Vezi Detalii</a> |
                   <a asp-page="./Delete" asp-route-id="@item.ID">Șterge</a> 
            </td>
        </tr>
}
    </tbody>
</table>
