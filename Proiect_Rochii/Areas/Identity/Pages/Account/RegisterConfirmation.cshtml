@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmare înregistrare";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click aici pentru a cofirma contul!</a>
</p>
    }
    else
    {
<p>
    Vă rugăm să vă confirmați email-ul pentru a confirma contul.
    
</p>
    }
}

